# To esnure that participants read and understand the instructions

<block Block_Interval>
/screencolor = white
/preinstructions = (interval)
</block>

<block Manipulation_Check_Instructions_1>
/ preinstructions = (instructions, instructions_1)
/ branch = [survey.Manipulation_Check_Instructions] 
</block>

<survey Manipulation_Check_Instructions>
/ pages = [1=test1]
/ showpagenumbers = false
/ branch = [if (dropdown.testquestion_instruction.response =="There is NO RELATIONSHIP between the words and images I am going to see") block.block_interval else block.Manipulation_Check_Instructions_1] 
/ screencolor = white
/ fontstyle = ("Arial", 2.5%)
</survey>

<surveypage test1>
/ questions = [1=testquestion_Instruction]
</surveypage>

<dropdown testquestion_Instruction>
/ caption = "What is the relationship between the words and images that will be pulled from the two bags?"
/ options = ("The words and images I am going to see are RELATED", "There is NO RELATIONSHIP between the words and images I am going to see", "I don't remember")
</dropdown>


